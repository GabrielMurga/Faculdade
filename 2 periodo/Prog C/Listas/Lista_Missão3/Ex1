#include <stdio.h>
#include <stdlib.h> 
void retorna_extremos(int* vetor,int tamanho,int* menor,int* maior) {
	int i;
	*maior = vetor[0]; 
	*menor = vetor[0]; 

	for (i = 0; i < tamanho; i++) {
		if (vetor[i] > *maior) {
			*maior = vetor[i];
		}if (vetor[i] < *menor) {
			*menor = vetor[i];
		}
	}
}
int main(){
	int i,*v, q, n, maior,menor;
	printf("Decida a quanitdade de numeros que deseja comparar: "); scanf_s("%d", &q);
	v = (int*)malloc(q * sizeof(int));
	if (v == NULL) {
		printf("Memória Insuficiente \n");
		return 1;
	}

	for (i = 0; i < q; i++) {
		printf("Digite o %d numero: ", i + 1); scanf_s("%d",&n);
		v[i] = n;
	}

	retorna_extremos(v, q, &maior, &menor);
	printf("O maior número é: %d\n", maior);
	printf("O menor número é: %d\n", menor);

	free(v);  // Libera a memória alocada para o vetor
	return 0;
}
